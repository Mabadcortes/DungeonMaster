<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:alpha=".7"
        android:scaleType="centerCrop"
        android:src="@drawable/character_background" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="300dp"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="130dp"
        android:layout_marginRight="10dp"
        android:alpha=".4"
        android:background="@drawable/custom_input" />

    <TextView
        android:id="@+id/level"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="140dp"
        android:text="Level: "
        android:textColor="@color/black"
        android:textSize="16dp"
        android:textStyle="bold" />

    <EditText
        android:id="@+id/characterLevel"
        android:layout_width="60dp"
        android:layout_height="30dp"
        android:layout_marginTop="137dp"
        android:layout_toRightOf="@+id/level"
        android:background="@drawable/custom_input"
        android:inputType="number"
        android:textAlignment="center"
        android:textColor="@color/darkRed"
        android:textSize="16sp" />

    <TextView
        android:id="@+id/exp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="120dp"
        android:layout_marginTop="140dp"
        android:layout_toRightOf="@+id/level"
        android:text="Experience: "
        android:textColor="@color/black"
        android:textSize="16sp"
        android:textStyle="bold" />

    <EditText
        android:id="@+id/characterExp"
        android:layout_width="60dp"
        android:layout_height="30dp"
        android:layout_marginTop="137dp"
        android:layout_toRightOf="@+id/exp"
        android:background="@drawable/custom_input"
        android:inputType="number"
        android:textAlignment="center"
        android:textColor="@color/darkRed"
        android:textSize="16sp" />

    <TextView
        android:id="@+id/equipment"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/level"
        android:layout_marginLeft="40dp"
        android:layout_marginTop="30dp"
        android:text="Equipment"
        android:textColor="@color/black"
        android:textSize="16sp"
        android:textStyle="bold" />

    <AutoCompleteTextView
        android:id="@+id/etEquipment"
        android:layout_width="330dp"
        android:layout_height="30dp"
        android:layout_below="@+id/equipment"
        android:layout_marginLeft="40dp"
        android:layout_marginTop="8dp"
        android:background="@drawable/custom_input"
        android:completionThreshold="1"
        android:hint="Equipment"
        android:paddingLeft="6dp" />

    <TextView
        android:id="@+id/spell"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/etEquipment"
        android:layout_marginLeft="40dp"
        android:layout_marginTop="30dp"
        android:text="Spell"
        android:textColor="@color/black"
        android:textSize="16sp"
        android:textStyle="bold" />

    <AutoCompleteTextView
        android:id="@+id/etSpell"
        android:layout_width="330dp"
        android:layout_height="30dp"
        android:layout_below="@+id/spell"
        android:layout_marginLeft="40dp"
        android:layout_marginTop="8dp"
        android:background="@drawable/custom_input"
        android:completionThreshold="1"
        android:hint="Spell"
        android:paddingLeft="6dp" />

    <Button
        android:id="@+id/update"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/etSpell"
        android:layout_marginLeft="150dp"
        android:layout_marginTop="20dp"
        android:background="@drawable/button_style"
        android:text="Update"
        android:textColor="@color/white" />

</RelativeLayout>