<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/login">


    <ImageView
        android:id="@+id/logo"
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:layout_above="@+id/container"
        android:layout_centerHorizontal="true"
        android:background="@drawable/logo_dyd_mobile" />

    <RelativeLayout
        android:id="@+id/container"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true">

        <ImageView
            android:id="@+id/image"
            android:layout_width="250dp"
            android:layout_height="300dp"
            android:layout_centerInParent="true"
            android:alpha=".6"
            android:background="@color/black" />


        <TextView
            android:id="@+id/text1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="30sp"
            android:fontFamily="@font/badaboom"
            android:text="Create and manage characters of"
            android:textColor="@color/white"
            android:textSize="15sp" />

        <TextView
            android:id="@+id/text2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/text1"
            android:layout_centerHorizontal="true"
            android:fontFamily="@font/badaboom"
            android:text="Dungeons &amp; Dragons"
            android:textColor="@color/white"
            android:textSize="15sp" />


        <EditText
            android:id="@+id/email"
            android:layout_width="200dp"
            android:layout_height="30dp"
            android:layout_below="@+id/text2"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="20sp"
            android:background="@drawable/custom_input"
            android:hint=" Email"
            android:inputType="text"
            android:paddingLeft="6dp"
            android:textColor="@color/black"
            android:textColorHint="@color/black"
            android:textSize="13sp" />


        <EditText
            android:id="@+id/passwd"
            android:layout_width="200dp"
            android:layout_height="30dp"
            android:layout_below="@+id/email"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="20sp"
            android:background="@drawable/custom_input"
            android:hint=" Password"
            android:inputType="textPassword"
            android:paddingLeft="6dp"
            android:textColor="@color/black"
            android:textColorHint="@color/black"
            android:textSize="13sp" />


        <TextView
            android:id="@+id/newUser"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/passwd"
            android:layout_marginLeft="30dp"
            android:layout_marginTop="5dp"
            android:clickable="true"
            android:focusable="true"
            android:fontFamily="@font/badaboom"
            android:text="Create a new User."
            android:textColor="@color/press_color"
            android:textSize="13sp" />

        <Button
            android:id="@+id/btnLogin"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/passwd"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="60sp"
            android:background="@drawable/button_style"
            android:text="Login"
            android:textColor="@color/white" />

        <TextView
            android:id="@+id/huella"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/newUser"
            android:layout_marginLeft="30dp"
            android:layout_marginTop="5dp"
            android:clickable="true"
            android:focusable="true"
            android:fontFamily="@font/badaboom"
            android:text="huella"
            android:textColor="@color/press_color"
            android:textSize="13sp" />

    </RelativeLayout>


</RelativeLayout>